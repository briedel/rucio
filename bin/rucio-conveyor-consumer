"""
Conveyor is a daemon to manage file transfers.
"""

import signal

from rucio.daemons.conveyor.consumer import run, stop

if __name__ == "__main__":

    signal.signal(signal.SIGTERM, stop)

    try:
        run()
    except KeyboardInterrupt:
        stop()
