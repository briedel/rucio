'''
Transmogrifier (Replication Rule Resolver) Daemon
'''

import argparse
import signal
import sys
import traceback

from rucio.daemons.transmogrifier import launch_transmogrifier, stop


if __name__ == "__main__":

    # Bind our callback to the SIGTERM signal and run the daemon:
    signal.signal(signal.SIGTERM, stop)

    parser = argparse.ArgumentParser()
    parser.add_argument("--run-once", action="store_true", default=False, help='Runs one loop iteration')
    args = parser.parse_args()

    print 'Start transmogrifier'
    if args.run_once:
        launch_transmogrifier(once=True)
        sys.exit()
    else:
        try:
            launch_transmogrifier(once=False)
        except KeyboardInterrupt:
            raise
        except:
            errno, errstr = sys.exc_info()[:2]
            trcbck = traceback.format_exc()
            print 'transmogrifier interrupted processing with %s %s %s.' % (errno, errstr, trcbck)
